[colors]
bg0 = ${xrdb:color0}
bg1 = #3c3836
fg0 = ${xrdb:color15}
fg1 = #ebdbb2

DarkGrey = ${xrdb:color8}
Grey = ${xrdb:color7}
DarkRed = ${xrdb:color1}
Red = ${xrdb:color9}
DarkGreen = ${xrdb:color2}
Green = ${xrdb:color10}
DarkYellow = ${xrdb:color3}
Yellow = ${xrdb:color11}
DarkBlue = ${xrdb:color4}
Blue = ${xrdb:color12}
DarkMagenta = ${xrdb:color5}
Magenta = ${xrdb:color13}
DarkCyan = ${xrdb:color6}
Cyan = ${xrdb:color14}

[fonts]
font-0 = PragmataPro Mono:size=10;2
font-1 = Symbols Nerd Font :pixelsize=12;2
font-2 = Symbols Nerd Font :pixelsize=12;3
font-3 = "Source Han Sans JP:pixelsize=9;3"
font-4 = "Source Han Sans JP:pixelsize=9;2"

[bar/right]
monitor = DVI-D-0
width = 100%:-16
height = 24
offset-x = 8
offset-y = 8
fixed-center = false

background = ${colors.bg0}
foreground = ${colors.fg0}

line-size = 2
wm-restack = bspwm
override-redirect = true
enable-ipc = true

border-top-size = 2
border-bottom-size = 2
border-right-size = 2
border-left-size = 2
border-color = ${colors.bg1}

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

modules-left = launcher seperator bspwm_states_right seperator bspwm xtitle_right
modules-right = eth seperator cpu_info seperator nvidia_info seperator pulseaudio seperator date


[bar/left]
monitor = HDMI-0
