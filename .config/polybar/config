[colors]
background   = ${xrdb:color8}
foreground   = ${xrdb:color15}

workspaces   = ${xrdb:color7}
network   = ${xrdb:color9}
CPU-temp   = ${xrdb:color12}
GPU-temp   = ${xrdb:color13}
volume   = ${xrdb:color10}
timedate   = ${xrdb:color11}

[fonts]
font-0 = cpmono_v07 plain:pixelsize=9;3
font-1 = cpmono_v07 plain:pixelsize=9;3
font-2 = IcoMoon\-Free :pixelsize=10;3.5
font-3 = powerlinesymbols:pixelsize=20;4.5

[bar/right]
monitor = DVI-D-0
monitor-fallback = DP-2
width = 30%
height = 20
offset-x = 70%
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 2
border-bottom-size = 2
border-color = ${self.background}

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

modules-right = eth cpu temperature nvidia_info pulseaudio date

[bar/middle]
monitor = DVI-D-0
monitor-fallback = DP-2
width = 11.2%
height = 20
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 2
border-bottom-size = 2
border-color = ${self.background}

padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

modules-left = workspaces

[bar/left]
monitor = HDMI-0
monitor-fallback = DP-2
width = 11.2%
height = 20
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

border-top-size = 2
border-bottom-size = 2
border-color = ${self.background}

padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

modules-left = workspaces

[bar/tv]
monitor = DP-2
width = 100%
height = 20
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-top-size = 2
border-bottom-size = 2
border-color = ${self.background}

module-margin-left = 0
module-margin-right = 0

font-0 = ${fonts.font-0}
font-1 = ${fonts.font-1}
font-2 = ${fonts.font-2}
font-3 = ${fonts.font-3}

modules-left = workspaces
modules-center = xwindow
modules-right = eth cpu temperature nvidia_info pulseaudio date

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.foreground}

[module/workspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;

format = <label-state>
label-active-padding = 1
label-active-foreground = ${colors.foreground}
label-empty-foreground = ${colors.background}
label-active-background = ${colors.workspaces}
label-empty-background = ${colors.workspaces}
label-inactive-padding = 1
label-occupied-padding = 1
label-urgent-padding = 1
label-empty-padding = 1


format-prefix = ""
format-prefix-foreground = ${colors.workspaces}
format-prefix-background = ${colors.background}
format-suffix = ""
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.workspaces}
 
[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

label-connected-foreground = ${colors.background}
label-connected-background = ${colors.network}
format-connected-prefix = ""
format-connected-prefix-foreground = ${colors.network}
format-connected-suffix = " "
format-connected-suffix-foreground = ${colors.CPU-temp}
format-connected-suffix-background = ${colors.network}
label-connected = "%{A1:gksu nm-connection-editor:} %downspeed% %upspeed%%{A}"

[module/cpu]
type = internal/cpu
interval = 0.5
label = "CPU %percentage%% "

label-foreground = ${colors.background}
label-background = ${colors.CPU-temp}

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

label-foreground = ${colors.background}
label-background = ${colors.CPU-temp}

[module/nvidia_info]
type = custom/script
tail = true
exec-if = nvidia-smi
exec = nvidia-smi --loop=1 --query-gpu=temperature.gpu,utilization.gpu,utilization.memory --format=csv,noheader,nounits | sed -ur 's|([[:digit:]]+)[^[:digit:]]*([[:digit:]]+)[^[:digit:]]*([[:digit:]]+)|GPU \2% \1°C |g'

format-prefix = " "
format-prefix-foreground = ${colors.GPU-temp}
format-prefix-background = ${colors.CPU-temp}
format-suffix = ""
format-suffix-foreground = ${colors.volume}
format-suffix-background = ${colors.GPU-temp}
label-foreground = ${colors.background}
label-background = ${colors.GPU-temp}

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.usb-Turtle_Beach_Turtle_Beach_PX3__PC_-00.analog-stereo

format-volume-background = ${colors.volume}
format-muted-background = ${colors.volume}

format-volume = <label-volume>
format-muted = <label-muted>
label-volume = "%{A3:$HOME/scripts/pavu-scratchpad.sh:} %percentage%%%{A}"
label-volume-foreground = ${colors.background}
label-muted = "%{A3:$HOME/scripts/pavu-scratchpad.sh:}%{A}"
label-muted-foreground = ${colors.background}

[module/date]
type = internal/date
interval = 5

time = %H:%M

label-foreground = ${colors.background}
label-background = ${colors.timedate}
format-prefix = " "
format-prefix-foreground = ${colors.timedate}
format-prefix-background = ${colors.volume}
format-suffix = ""
format-suffix-foreground = ${colors.background}
format-suffix-background = ${colors.timedate}

label = %{A1:gsimplecal &:} %time% %{A}

[settings]
screenchange-reload = true
