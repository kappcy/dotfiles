#
# keybinding for apps
#

# terminal emulator (termite)
super + Return
	alacritty

# program launcher (rofi)
alt + q
	rofi -show drun -m -4

# window switcher (rofi)
alt + Tab
	rofi -show window -m -4

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# calculator (galculator)
alt + c
    galculator

# internet (vivaldi)
alt + i
    vivaldi-stable

# files (pcmanfm)
alt + f
    bspc rule -a \* -o state=tiled && pcmanfm

# games (steam)
alt + g
    steam

# screengrabs (shutter)
Print
    shutter -s

# nvidia settings
alt + d
    nvidia-settings

#
# keybindings for screenblank script
#

# lock
alt + l
    ~/scripts/screenblank -l

# system suspend
alt + shift + l
    systemctl suspend

# toggle screenblank
alt + b
    ~/scripts/screenblank

# toggle suspend
alt + shift + b
    ~/scripts/screenblank -ts

# toggle lock
ctrl + shift + b
    ~/scripts/screenblank -tl

# status
alt + ctrl + b
    ~/scripts/screenblank -s

# blank
super + b
    ~/scripts/screenblank -b

#
# keybindings for scripts
#

# pavu scratchpad
alt + s
    ~/scripts/pavu-scratchpad.sh

# boot to windows
super + shift + r
    ~/scripts/boot2win

# tv toggle
alt + shift + t
    ~/scripts/tv-toggle

#
# numpad hotkeys
#

super + KP_{0,Insert}
	bspc desktop -l next

super + KP_{1,End}
	bspc {node -d,desktop -f} 1 --follow

super + KP_{2,Down}
	bspc {node -d,desktop -f} 2 --follow

super + KP_{3,Next}
	bspc {node -d,desktop -f} 3 --follow

super + KP_{4,Left}
	bspc {node -d,desktop -f} 4 --follow

super + KP_{5,Begin}
	bspc {node -d,desktop -f} 5 --follow

super + KP_{6,Right}
	bspc {node -d,desktop -f} 6 --follow

super + KP_{7,Home}
	bspc {node -d,desktop -f} 7 --follow

super + KP_{8,Up}
	bspc {node -d,desktop -f} 8 --follow

super + KP_{9,Prior}
	bspc {node -d,desktop -f} 9 --follow

super + KP_{Decimal,Delete}
	bspc node @/ -{B,E}

super + {_,shift + }KP_Enter
	bspc {node -m,monitor -f} next --follow

super + KP_Add
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 5 ))

super + KP_Subtract
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))

super + KP_Multiply
	bspc config -d focused top_padding 0; bspc config -d focused window_gap 8

super + KP_Divide
	bspc config -d focused top_padding -36; bspc config -d focused window_gap 0

#
# keybindings for mini-keyboard remote
#

# send to next screen
ctrl + {_,shift + }F8
    bspc {node -m,monitor -f} next --follow

# mouseflip
ctrl + F7
    ~/scripts/mouseflip

# nnn/terminal
ctrl + {_,shift + }F6
    {alacritty -e nnn,alacritty}

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
alt + {_,shift + }w
	bspc node -{c,k}

# pointed close and kill
alt + {_,shift + }button2
	bspc node pointed -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send to next screen
ctrl + Return
    bspc node -m next --follow
#
# state/flags
#

# set the window state
super + {t,shift + t,s}
	bspc node -t {tiled,pseudo_tiled,floating}

# set fullscreen
super + f
	bspc node -t \~fullscreen

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction

# vim way
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# arrow keys
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# swap with mouse click
alt + button1
	bspc node -s pointed

# focus node parent
super + p
	bspc node -f @parent

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' --follow

#
# preselect
#

# preselect the direction

# vim way
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# arrow keys
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused desktop
super + ctrl + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# circulate

# vim way
alt + {h,l}
	bspc node -C {backward,forward}

# arrow keys
alt + {Left,Right}
	bspc node -C {backward,forward}

# rotate
super + {_,shift + }space
	bspc node{ @/, } -R 90

# expand a window by moving one of its side outward

# vim way
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# arrow keys
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward

# vim way
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# arrow keys
super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window

# vim way
super + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# arrow keys
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# audio keys

# volume
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -1500

XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +1500

