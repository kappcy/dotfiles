override-redirect = true
enable-ipc = true

border-top-size = 2
border-bottom-size = 2
border-right-size = 2
border-left-size = 2
border-color = #343434

font-0 = PragmataPro Mono:pixelsize=14;2
font-1 = Symbols Nerd Font :pixelsize=16;2
font-2 = Symbols Nerd Font :pixelsize=16;3
font-3 = "Source Han Sans JP:pixelsize=13;2"

